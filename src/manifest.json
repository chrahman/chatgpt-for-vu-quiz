{
  "version": "1.1.1",
  "manifest_version": 3,
  "name": "ChatGPT for Vu Quiz",
  "description": "Get ChatGPT answers in Vu Live Quiz",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_icon": "assets/logo.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"]
}
