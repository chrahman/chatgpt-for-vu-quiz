{
  "version": "1.1.2",
  "manifest_version": 2,
  "name": "ChatGPT for Vu Quiz",
  "description": "Get ChatGPT answers in Vu Live Quiz",
  "web_accessible_resources": [
    "assets/48.png"
  ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "assets/128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://demo-1k2.pages.dev/",
        "https://quiz.vu.edu.pk/*",
        "http://quiz.vu.edu.pk/*"
      ],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "permissions": ["activeTab", "tabs", "https://*.openai.com/"]
}